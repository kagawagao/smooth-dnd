{
  "name": "@cisdi/smooth-dnd",
  "version": "0.13.0",
  "description": "Drag and Drop library",
  "main": "lib/index.js",
  "module": "es/index.js",
  "scripts": {
    "bundle": "rollup -c --environment INCLUDE_DEPS,BUILD:production",
    "build:es": "tsc --outDir es",
    "build:commonjs": "tsc -p ./tsconfig.lib.json --outDir lib",
    "build": "npm run build:es & npm run build:commonjs & npm run bundle"
  },
  "types": "typings/index.d.ts",
  "files": [
    "dist",
    "es",
    "lib"
  ],
  "keywords": [
    "sortable",
    "drag and drop",
    "drag&drop",
    "drag",
    "drop",
    "draggable",
    "dnd"
  ],
  "author": {
    "name": "kagawa",
    "email": "kingsongao1221@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kagawagao/smooth-dnd.git"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-typescript": "7.3.3",
    "husky": "^2.4.1",
    "lint-staged": "^8.2.1",
    "prettier": "^1.18.2",
    "rollup": "^1.16.2",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-uglify": "6.0.2",
    "typescript": "^3.5.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,css,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
